<p id="notice"><%= notice %></p>

<h1>Claims</h1>

<table>
  <thead>
    <tr>
      <th>Claim date</th>
      <th>Pharmacy</th>
      <th>Drug</th>
      <th>Prescription cost</th>
      <th>Plan paid</th>
      <th>Patient paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.claim_date %></td>
        <td><%= claim.pharmacy %></td>
        <td><%= claim.drug %></td>
        <td><%= claim.prescription_cost %></td>
        <td><%= claim.plan_paid %></td>
        <td><%= claim.patient_paid %></td>
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3> Import Claims </h3>
<%= form_tag import_claims_path, multipart: true do %>
 <%= file_field_tag :file %>
 <%= submit_tag "Upload Claims" %>
<% end %> 

<%= link_to 'New Claim', new_claim_path %>
